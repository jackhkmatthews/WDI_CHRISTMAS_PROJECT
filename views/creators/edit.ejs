<section class="container">
  <div class="row title-banner">
    <div class="col-sm-12">
      <div class="page-header">
        <h1><%= creator.name %>'s profile, can be edited and updated below.</h1>
      </div>
    </div>
  </div>
  <form method="post" action="/creators/<%= creator._id %>">
    <input type="hidden" name="_method" value="put">
    <div class="form-group form-group form-group col-sm-10 col-sm-offset-1">
      <input type="text" class="form-control" id="inputTitleMain" value="<%= creator.name %>" name="creator[name]">
    </div>
    <div class="form-group col-sm-10 col-sm-offset-1">
      <div class="form-group col-sm-4">
        <label for="inputColorsTopLeft">Gradient Start</label>
        <input type="text" class="form-control" id="inputColorsTopLeft" value="<%= creator.colors[0].topLeft %>" name="creator[colors][topLeft]">
      </div>
      <div class="form-group col-sm-4">
        <label for="inputColorsBottomRight">Gradient End</label>
        <input type="text" class="form-control" id="inputColorsBottomRight" value="<%= creator.colors[0].bottomRight %>" name="creator[colors][bottomRight]">
      </div>
      <div class="form-group col-sm-4">
        <label for="imageUrlsBanner">Banner Image URL</label>
        <input type="text" class="form-control" id="imageUrlsBanner" value="<%= creator.imageUrls[0].banner %>" name="creator[imageUrls][banner]">
      </div>
    </div>
    <div class="col-sm-10 col-sm-offset-1 btn-column">
      <button type="submit" class="btn btn-default">Update</button>
    </div>
  </form>
</section>
